{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["prowlarr", "service", "config", "media"],
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the chart"
    },
    "namespaceOverride": {
      "type": "string",
      "description": "Override the namespace of the chart"
    },
    "prowlarr": {
      "type": "object",
      "properties": {
        "replicas": {
          "type": "integer",
          "description": "Number of replicas"
        },
        "strategyType": {
          "type": "string",
          "description": "The deployment strategy type",
          "enum": ["Recreate", "RollingUpdate"]
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "description": "The image repository"
            },
            "tag": {
              "type": "string",
              "description": "The image tag"
            }
          },
          "required": ["repository"]
        },
        "securityContext": {
          "type": "object",
          "description": "Security context for the container",
          "properties": {
            "readOnlyRootFilesystem": {
              "type": "boolean",
              "description": "Whether to run Prowlarr with a read-only root filesystem"
            },
            "runAsUser": {
              "type": "integer",
              "description": "The user ID to run Prowlarr as"
            },
            "runAsGroup": {
              "type": "integer",
              "description": "The group ID to run Prowlarr as"
            }
          }
        },
        "resources": {
          "type": "object",
          "description": "Resource requests and limits",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string",
                  "description": "Memory request"
                },
                "cpu": {
                  "type": "string",
                  "description": "CPU request"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string",
                  "description": "Memory limit"
                },
                "cpu": {
                  "type": "string",
                  "description": "CPU limit"
                }
              }
            }
          }
        },
        "livenessProbe": {
          "type": "object",
          "description": "The livenessProbe configuration for the Prowlarr pod",
          "additionalProperties": true
        },
        "readinessProbe": {
          "type": "object",
          "description": "The readinessProbe configuration for the Prowlarr pod",
          "additionalProperties": true
        },
        "startupProbe": {
          "type": "object",
          "description": "The startupProbe configuration for the Prowlarr pod",
          "additionalProperties": true
        },
        "annotations": {
          "type": "object",
          "description": "Annotations to apply to the Prowlarr pod",
          "additionalProperties": {
            "type": "string"
          }
        },
        "env": {
          "type": "array",
          "description": "The environment variables to set for the Prowlarr pod",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the environment variable"
              },
              "value": {
                "type": "string",
                "description": "The value of the environment variable"
              }
            },
            "required": ["name", "value"]
          }
        }
      },
      "required": ["replicas", "image"]
    },
    "service": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "description": "Annotations to add to the service",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ports": {
          "type": "array",
          "description": "List of ports to expose",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the port"
              },
              "port": {
                "type": "integer",
                "description": "The service port"
              },
              "protocol": {
                "type": "string",
                "description": "The protocol used by the port",
                "enum": ["TCP", "UDP"]
              }
            },
            "required": ["name", "port", "protocol"]
          }
        },
        "type": {
          "type": "string",
          "description": "The service type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        }
      },
      "required": ["ports", "type"]
    },
    "config": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "description": "Annotations to apply to the Prowlarr config persistent volume claim",
          "additionalProperties": {
            "type": "string"
          }
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable the creation of a persistent volume claim for the Prowlarr config"
        },
        "existingClaim": {
          "type": "string",
          "description": "Use this attribute to reference an existing persistent volume claim to use for the Prowlarr config"
        },
        "size": {
          "type": "string",
          "description": "The amount of storage to request for the Prowlarr config"
        },
        "accessMode": {
          "type": "string",
          "description": "The access mode to use for the Prowlarr config persistent volume claim",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "retain": {
          "type": "boolean",
          "description": "Whether to keep the persistent volume claim for the config after the Prowlarr chart is uninstalled"
        }
      },
      "required": ["enabled", "size", "accessMode"]
    },
    "media": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "description": "Annotations to apply to the Prowlarr media persistent volume claim",
          "additionalProperties": {
            "type": "string"
          }
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable the creation of a persistent volume claim for the Prowlarr media"
        },
        "existingClaim": {
          "type": "string",
          "description": "Use this attribute to reference an existing persistent volume claim to use for the Prowlarr media"
        },
        "size": {
          "type": "string",
          "description": "The amount of storage to request for the Prowlarr media"
        },
        "accessMode": {
          "type": "string",
          "description": "The access mode to use for the Prowlarr media persistent volume claim",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "retain": {
          "type": "boolean",
          "description": "Whether to keep the persistent volume claim for the media after the Prowlarr chart is uninstalled"
        }
      },
      "required": ["enabled", "size", "accessMode"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to create an ingress for Prowlarr"
        },
        "annotations": {
          "type": "object",
          "description": "Annotations to apply to the Prowlarr ingress",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ingressClassName": {
          "type": "string",
          "description": "The ingress class to use for the Prowlarr ingress"
        },
        "hosts": {
          "type": "array",
          "description": "Host configuration for the Prowlarr ingress",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "description": "The hostname for the ingress rule"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string",
                      "description": "The path for the ingress rule"
                    },
                    "pathType": {
                      "type": "string",
                      "description": "The path type for the ingress rule",
                      "enum": ["Exact", "Prefix", "ImplementationSpecific"]
                    }
                  },
                  "required": ["path", "pathType"]
                }
              }
            },
            "required": ["host", "paths"]
          }
        },
        "tls": {
          "type": "array",
          "description": "TLS configuration for the Prowlarr ingress",
          "items": {
            "type": "object",
            "properties": {
              "hosts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "secretName": {
                "type": "string"
              }
            }
          }
        }
      },
      "if": {
        "properties": {
          "enabled": {"const": true}
        }
      },
      "then": {
        "required": ["hosts"],
        "properties": {
          "hosts": {
            "minItems": 1,
            "errorMessage": "At least one host must be specified when ingress is enabled"
          }
        }
      }
    }
  }
}
