{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "bbe": {
      "type": "object",
      "properties": {
        "metallb": {
          "type": "object",
          "properties": {
            "blocky": {
              "type": "object",
              "properties": {
                "ipAddressPool": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The IP address pool to use for the Blocky service"
                }
              }
            }
          }
        }
      }
    },
    "ingress-nginx": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "controller": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "service": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "loadBalancerIP": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The IP address to use for the load balancer"
                }
              }
            }
          }
        }
      }
    }
  }
}
