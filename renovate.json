{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["github-actions", "custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["Chart.yaml"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>v[0-9]+\\.[0-9]+(?:\\.[0-9]+)?)\"?"
      ],
      "depNameTemplate": "ghcr.io/0xerr0r/blocky",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["required-versions.yaml"],
      "matchStrings": [
        "external-chart:\\n.*version:\\s+(?<currentValue>[\\d\\.]+)\\n\\s+repositoryUrl:\\s+(?<registryUrl>.*)\\n\\s+repositoryName:\\s(?<depName>[a-z-]+)"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "major": {
    "labels": ["chore", "major"]
  },
  "minor": {
    "labels": ["chore", "minor"]
  },
  "patch": {
    "labels": ["chore", "patch"]
  }
}
