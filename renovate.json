{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["Chart.yaml"],
      "matchStrings": ["appVersion: (?<currentValue>.*)"],
      "depNameTemplate": "ghcr.io/0xerror/blocky",
      "datasourceTemplate": "docker"
    }
  ]
}
